<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.zyropos.SplashController">
   <children>
      <VBox alignment="CENTER" spacing="20.0">
         <ImageView fx:id="myLogo2" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../../assets/ZyroPOS2.png" />
            </image>
         </ImageView>
         
         <Label text="ZyroPOS" styleClass="h1"/>
         
         <ProgressIndicator fx:id="myProgress" prefHeight="40.0" prefWidth="40.0" />
         
         <Label fx:id="myLabel" text="0%" styleClass="text-secondary"/>
         
         <VBox spacing="5" alignment="CENTER">
             <Label fx:id="lblCopy" text="All Rights Reserved" styleClass="text-secondary" style="-fx-font-size: 10px;"/>
             <Label fx:id="lblComp" text="powered by ZafTech" styleClass="text-secondary" style="-fx-font-size: 10px;"/>
         </VBox>
      </VBox>
   </children>
</StackPane>
